# This file compiled from .travis.yml.in

sudo: false

language: python

python:
  - "{{ python_version }}"

install:
  # Install Ruby
  - rvm install {{ ruby_version }}
  - rvm @global do gem install bundler -v {{ bundler_version }}
  - rvm @global do gem uninstall bundler -v "!={{ bundler_version }}"
  - rvm use {{ ruby_version }} --default

  # Install NodeJS
  - nvm install {{ node_version }}

  # Install Python dependencies
  - python -m pip install --upgrade pip=={{ pip_version }}
  - python -m pip install -r requirements3.txt

  # Invoke will get our other dependencies
  - invoke update_dependencies

script:
  - nosetests
